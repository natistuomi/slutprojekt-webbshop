{% extends "layout.njk" %}
{% block content %}
    <ul>
    {% for row in rows %}
        <li>
            <h2>{{ row.name }}</h2>
            <p>Lager: {{ row.amount }}</p>
            <p>Pris: {{ row.price  }}</p>
            {% if loggedIn != 0 %}
                <form action="/addToCart" method="POST">
                    <input type="hidden" name="productId" value="{{ row.id }}">
                    <button type="submit">Lägg i varukorgen</button>
                </form>
            {% else %}
                <p>Logga in för att handla</p>
            {% endif %}
        </li>
    {% endfor %}
  </ul>
{% endblock %}